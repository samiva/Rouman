<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button12"
        android:layout_width="70dp"
        android:layout_height="0dp"
        android:text="PLAT"
        app:layout_constraintBottom_toTopOf="@+id/button13"
        app:layout_constraintEnd_toEndOf="@id/text_timeSet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_timeSet"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/button13"
        android:layout_width="70dp"
        android:layout_height="0dp"
        android:text="VARV"
        app:layout_constraintEnd_toEndOf="@+id/button12"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintBottom_toTopOf="@+id/button14"
        app:layout_constraintTop_toBottomOf="@+id/button12" />

    <Button
        android:id="@+id/button14"
        android:layout_width="70dp"
        android:layout_height="0dp"
        android:text="VARK"
        app:layout_constraintEnd_toEndOf="@+id/button13"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintBottom_toTopOf="@+id/button15"
        app:layout_constraintTop_toBottomOf="@+id/button13" />

    <Button
        android:id="@+id/button15"
        android:layout_width="70dp"
        android:layout_height="0dp"
        android:text="VARO"
        app:layout_constraintEnd_toEndOf="@+id/button14"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintBottom_toTopOf="@+id/button16"
        app:layout_constraintTop_toBottomOf="@+id/button14" />

    <Button
        android:id="@+id/button16"
        android:layout_width="70dp"
        android:layout_height="0dp"
        android:text="PUMP"
        app:layout_constraintEnd_toEndOf="@+id/button15"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintBottom_toTopOf="@+id/button17"
        app:layout_constraintTop_toBottomOf="@+id/button15" />

    <Button
        android:id="@+id/button17"
        android:layout_width="70dp"
        android:layout_height="0dp"
        android:text="KVES"
        app:layout_constraintEnd_toEndOf="@+id/button16"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintBottom_toTopOf="@+id/buttonR7"
        app:layout_constraintTop_toBottomOf="@+id/button16" />

    <Button
        android:id="@+id/buttonR7"
        android:layout_width="70dp"
        android:layout_height="0dp"
        android:text="R7"
        app:layout_constraintEnd_toEndOf="@+id/button17"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintBottom_toTopOf="@+id/buttonR8"
        app:layout_constraintTop_toBottomOf="@+id/button17" />

    <Button
        android:id="@+id/buttonR8"
        android:layout_width="70dp"
        android:layout_height="0dp"
        android:text="R8"
        app:layout_constraintEnd_toEndOf="@+id/buttonR7"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintBottom_toTopOf="@+id/button_confirm"
        app:layout_constraintTop_toBottomOf="@+id/buttonR7" />


    <TextView
        android:id="@+id/text_timeNow"
        android:layout_width="70dp"
        android:layout_height="0dp"
        android:text="Time now"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_timeSet"
        android:layout_width="70dp"
        android:layout_height="0dp"
        android:text="Time set"
        app:layout_constraintEnd_toEndOf="@+id/text_timeNow"
        app:layout_constraintTop_toBottomOf="@+id/text_timeNow" />


    <Button
        android:id="@+id/button_confirm"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_marginEnd="16dp"
        android:text="OK"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_list" />

    <com.example.rouman.Canvass
        android:id="@+id/canvasView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/buttonR8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/button15"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button_send_now"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="Send Now"
        app:layout_constraintEnd_toStartOf="@+id/button_confirm"
        app:layout_constraintStart_toEndOf="@+id/button_settings2"
        app:layout_constraintTop_toBottomOf="@+id/buttonR8" />

    <Button
        android:id="@+id/button_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lista"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_confirm" />

    <Button
        android:id="@+id/button_settings2"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="Settings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonR8" />


</androidx.constraintlayout.widget.ConstraintLayout>